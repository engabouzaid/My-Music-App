<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="6dp">

  <ImageView
    android:id="@+id/song_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerInParent="true"
    android:src="@drawable/song64"/>
  <ImageView
    android:id="@+id/play_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_action_playback_play"/>

  <TextView
    android:id="@+id/song_name"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_toEndOf="@+id/song_image"
    android:layout_toRightOf="@+id/song_image"
    android:fontFamily="sans-serif-thin"
    android:hint="song name"
    android:textAllCaps="true"
    android:textColor="@android:color/black"
    android:textSize="18sp"/>
  <TextView
    android:id="@+id/song_artist"
    style="@style/lightText"
    android:textStyle="bold"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_below="@+id/song_name"
    android:layout_toEndOf="@+id/song_image"
    android:layout_toRightOf="@+id/song_image"
    android:hint="song artist"/>

  <TextView
    android:id="@+id/song_duration"
    style="@style/lightText"
    android:textStyle="bold"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_below="@+id/song_artist"
    android:layout_toEndOf="@+id/song_image"
    android:layout_toRightOf="@+id/song_image"
    android:hint="song durration"/>

</RelativeLayout>